generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id
  username     String @unique
  avatar       String
  accessToken  String
  refreshToken String
  permissions  Int[]
}

model MissionPack {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  steamId  String
  missions Mission[]
  verified Boolean   @default(true)
}

model Mission {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  author      String
  bombs       Bomb[]
  completions Completion[]
  tpSolve     Boolean      @default(false)
  factory     String?
  verified    Boolean      @default(true)
  variant     Int?

  missionPack   MissionPack? @relation(fields: [missionPackId], references: [id])
  missionPackId Int?
}

model Bomb {
  id      Int   @id @default(autoincrement())
  modules Int
  time    Float
  strikes Int
  widgets Int
  pools   Json

  mission   Mission @relation(fields: [missionId], references: [id], onDelete: Cascade)
  missionId Int
}

model Completion {
  id     Int      @id @default(autoincrement())
  proofs String[]
  time   Float
  team   String[]
  first  Boolean
  old    Boolean
  solo   Boolean

  mission   Mission @relation(fields: [missionId], references: [id], onDelete: Cascade)
  missionId Int

  verified Boolean @default(true)
}
